<!DOCTYPE html>
<html>
<head>
  <title>Keynote</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="//vjs.zencdn.net/5.11.7/video-js.css" rel="stylesheet">
  <script src="//vjs.zencdn.net/5.9.2/video.js"></script>
  <!-- Video.js support for IE8 -->
  <script src="//vjs.zencdn.net/ie8/1.1.2/videojs-ie8.min.js"></script>
</head>
<body>

<div id="wrap">
  <nav class="navbar navbar-inverse">
    <div class="container-fluid">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%= link_to 'Keynote', root_path, class: 'navbar-brand' %>
      </div>

      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav">
          <li>
            <%= link_to 'See All Courses', courses_path %>
          </li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
            <li><%= link_to 'My Dashboard', dashboard_path %></li>
            <li><%= link_to 'Sign out', destroy_user_session_path, method: :delete %></li>
          <% else %>
            <li><%= link_to 'Sign in', new_user_session_path %></li>
            <li><%= link_to 'Sign up', new_user_registration_path %></li>
        <% end %>
        </ul>
      </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
  </nav>

  <% if notice.present? %>
    <p class="notice"><%= notice %></p>
  <% end %>
  <% if alert.present? %>
    <p class="alert"><%= alert %></p>
  <% end %>

  <%= yield %>
</div>

<br class="clr" />

<div id="footer">
  <div class="container">
    <div class="col-xs-12 col-sm-3">
      <b>Teachers</b>
      <br />
      <%= link_to 'Teach a Course', new_instructor_course_path %>
      <br />
      <%= link_to 'My Dashboard', dashboard_path %>
    </div>
    <div class="col-xs-12 col-sm-3">
      <b>About</b>
      <br />
      <%= link_to 'Team', team_path %>
      <br />
      <%= link_to 'Careers', careers_path %>
      <br />
      <%= link_to 'Privacy Policy', privacy_path %>
    </div>
    <div class="col-xs-12 col-sm-3">
      <b>Contact</b>
      <br />
      nomsterchi@gmail.com
      <br />
      405 Main Street
      <br />
      New York, NY 10044
    </div>
    <div class="col-xs-12 col-sm-3 social">
      <b>Social</b>
      <br />
      <br />
      <%= link_to 'http://github.com/chiyingleung1' do %>
        <%= image_tag 'github.png', class: 'social-button' %>
      <% end %>
      <%= link_to 'http://www.facebook.com/chiying.leung.1' do %>
        <%= image_tag 'facebook.png', class: 'social-button' %>
      <% end %>
      <%= link_to 'http://www.instagram.com/chil222/' do %>
        <%= image_tag 'instagram.png', class: 'social-button' %>
      <% end %>
    </div>
  </div>
</div>

</body>
</html>
